doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/layouts/core.min.css?#{cacheBreaker}')
    block neck
  body
    div.navbar.navbar-default.navbar-static-top
      img(src='#{user.avatar}' style='padding:10px; height: 50px;')
      span(style='padding-right:10px') #{user.nickname}
      ul.nav.nav-tabs.pull-right
        li: a(href='/account/') 我的帐号
        li: a(href='/account/settings/') 设置
        li: a(href='/weixin/relation/') 关联帐号
        li: a(href='/logout/')
          i.fa.fa-user
          |  退出

    div.page
      div.container
        block body

    div.footer
      div.container
        div.inner
          span.copyright.pull-right
            |&#169; #{copyrightYear} #{copyrightName}
          ul.links
            li: a(href='/') 首页
            li: a(href='/logout/') 退出
          div.clearfix

    div.ajax-spinner
      img(src='/media/ajax-pulse.gif')

    //if lte IE 9
      script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/layouts/core.min.js?#{cacheBreaker}')

    block feet
